<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.serviceapplication.MainActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text"
        android:imeOptions="actionDone" />

    <EditText
        android:id="@+id/edit_text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:inputType="text"
        android:imeOptions="actionDone" />

    <Button
        android:id="@+id/button_start_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Service" />

    <Button
        android:id="@+id/button_stop_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Service" />

    <Button
        android:id="@+id/button_channel_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel High" />

    <Button
        android:id="@+id/button_channel_low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel Low" />

    <Button
        android:id="@+id/button_channel_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send on Channel Group" />

</LinearLayout>